        <ul>
            <li class="restaurant-item">
                <article>
                    <h2 id="restaurant-title">Restaurant Title</h2>
                    <div class="restaurant-meta">

                        <p id="restaurant-cuisine">Cuisisne</p>
                        <p id="restaurant-address">Address</p>
